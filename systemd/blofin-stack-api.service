[Unit]
Description=Blofin monitoring API/dashboard
After=network-online.target blofin-stack-ingestor.service
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/rob/.openclaw/workspace/blofin-stack
EnvironmentFile=/home/rob/.openclaw/workspace/blofin-stack/.env
ExecStart=/home/rob/.openclaw/workspace/blofin-stack/.venv/bin/python /home/rob/.openclaw/workspace/blofin-stack/api_server.py
Restart=always
RestartSec=2

[Install]
WantedBy=default.target
