[Unit]
Description=Kanban auto-coding worker
After=network-online.target blofin-stack-api.service
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/rob/.openclaw/workspace/blofin-stack
EnvironmentFile=/home/rob/.openclaw/workspace/blofin-stack/.env
ExecStart=/home/rob/.openclaw/workspace/blofin-stack/.venv/bin/python /home/rob/.openclaw/workspace/blofin-stack/kanban_worker.py
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
