[Unit]
Description=Dedicated Kanban dashboard
After=network-online.target kanban-worker.service
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/rob/.openclaw/workspace/blofin-stack
EnvironmentFile=/home/rob/.openclaw/workspace/blofin-stack/.env
ExecStart=/home/rob/.openclaw/workspace/blofin-stack/.venv/bin/python /home/rob/.openclaw/workspace/blofin-stack/kanban_server.py
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
